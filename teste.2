%{

	/*EXEMPLO 0 :: Flex
	  reconhecimento simples de digitos e palavras*/
	int numPalavras = 0;

%}

DIGITO [0-9] 
PALAVRA [a-zA-Z]+
ESPACO " "

%%

{DIGITO}	{ printf("Digito:_\"%s\"\n", yytext); }
{PALAVRA}	{ printf("Palavra:_\"%s\"\n", yytext); numPalavras++;}
{ESPACO}	{ printf("Espaco\n"); }
.		{ printf("Nao_reconhecido:_\"%s\"\n", yytext); }

%%

int main ( int nArgs, char* szArgs[]) {
	yylex();
	printf("Numero_palavras:_%d\n", numPalavras);
	return 0;
}